#include <stdio.h>
int main() {
  int a;
  scanf("%d", &a);
  for (int i = 1; i <= a; i++) {
    for (int j = 1; j <= a; j++)
      if (i == a - (a - 1) || i == a || j == a - (a - 1) || j == a)
        printf("* ");
      else if (i + j == 4 || i + j == 5){
        if (i > 4 || j > 4) 
          printf("* ");
          if (i + j == 7 || i + j == 8 || i + j == 9 || i + j == 11 ||i + j == 12)
            printf("* ");
          else
            printf("  ");
        //else printf("  ");
        }
         else
          printf("  ");
    printf("\n");
  }
}
